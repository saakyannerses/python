arr = [5, 10, 7, 24, 32, 0, 18, 3, 40]
size = len(arr)

# Вывод четных элементов
print("Четные элементы массива:")
for i in range(size):
    if arr[i] % 2 == 0:
        print(arr[i], end=" ")

# Вывод элементов, оканчивающихся нулем
print("\nЭлементы массива, оканчивающиеся нулем:")
for i in range(size):
    if arr[i] % 10 == 0:
        print(arr[i], end=" ")
